<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/normal_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.33"
        android:background="@drawable/tabwidget_select1" >

        <TextView
            android:id="@+id/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dip"
            android:text="@string/popular"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/hotspot"
            android:layout_marginRight="3dip"
            android:layout_width="16dip"
            android:layout_height="16dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dip"
            android:layout_alignParentTop="true"
            android:background="@drawable/u_spot"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/normal_animation_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/tabwidget_select3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/linesperater1"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/tabwidget_linesperater" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/category_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.33"
        android:background="@drawable/tabwidget_select1" >

        <ImageView
            android:id="@+id/hotspot"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dip"
            android:layout_alignParentTop="true"
            android:background="@drawable/u_spot"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dip"
            android:text="@string/specialtys"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/category_animation_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/tabwidget_select3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/linesperater2"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/tabwidget_linesperater" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/other_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.33"
        android:background="@drawable/tabwidget_select1" >

        <ImageView
            android:id="@+id/hotspot"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dip"
            android:layout_alignParentTop="true"
            android:background="@drawable/u_spot"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/other_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dip"
            android:text="@string/favorites"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/other_animation_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/tabwidget_select3"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/category_layout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.33"
        android:background="@drawable/tabwidget_select1"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/hotspot"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dip"
            android:layout_alignParentTop="true"
            android:background="@drawable/u_spot"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/linesperater3"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/tabwidget_linesperater" />

        <TextView
            android:id="@+id/category_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dip"
            android:text="@string/specialtys"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/category_animation_btn1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/tabwidget_select3"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>