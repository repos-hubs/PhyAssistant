<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:maxHeight="80.0dip"
    android:orientation="vertical"
    android:paddingTop="10dip" >

    <TextView
        android:id="@+id/ArticleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:textColor="@color/depth_blue"
        android:textSize="18dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/PeriodicalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ArticleTitle"
        android:layout_marginLeft="10dip"
        android:ellipsize="end"
        android:maxWidth="220dip"
        android:textColor="#73b7a6"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/PeriodicalTitle"
        android:layout_below="@id/ArticleTitle"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/PeriodicalTitle"
        android:background="@drawable/tag1"
        android:gravity="center_horizontal"
        android:paddingLeft="6dp"
        android:paddingTop="1dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PeriodicalTitle"
        android:layout_marginLeft="10dip"
        android:text="2012/12/23"
        android:textColor="#808080"
        android:textSize="13sp" />

</RelativeLayout>