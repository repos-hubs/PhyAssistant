<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mai"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/light_bg" >

    <LinearLayout
        android:id="@+id/header_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/register_title_back"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/RegZeroTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/invitecode_title"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dip"
        android:layout_below="@id/header_panel"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rcorner_friend_frame"
            android:padding="2dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/rcorner_white_friend_frame"
                android:orientation="vertical"
                android:paddingTop="40dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="2dip" >

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/invite_u_r_using_std"
                        android:textColor="#206b8c"
                        android:textSize="17dip" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:gravity="center"
                        android:text="@string/invite_comeon"
                        android:textColor="#206b8c"
                        android:textSize="17dip" />

                    <TextView
                        android:id="@+id/whatsInJIBOPro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dip"
                        android:layout_marginRight="42dip"
                        android:layout_marginTop="30dip"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:paddingTop="7dip"
                        android:paddingBottom="7dip"
                        android:background="@drawable/login_btn_bg"
                        android:gravity="center"
                        android:text="@string/invite_whats_new_pro"
                        android:textColor="@android:color/white"
                        android:textSize="17dip" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/professional_word"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="0dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="30dip" >

                    <TextView
                        android:id="@+id/pro_word_cnt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_colorslide_friend"
                        android:gravity="center"
                        android:padding="5dip"
                        android:textColor="#206b8c"
                        android:textSize="17dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/std_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:gravity="center_horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/ways_tip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/gradient_colorslide_friend"
                        android:gravity="center"
                        android:padding="5dip"
                        android:text="@string/invite_two_ways_get"
                        android:textColor="#206b8c"
                        android:textSize="17dip" />

                    <TextView
                        android:id="@+id/txt_label"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ways_tip"
                        android:layout_marginTop="10dip"
                        android:text="@string/invite_fill_code"
                        android:textColor="#206b8c"
                        android:textSize="17dip" />

                    <LinearLayout
                        android:id="@+id/invitecode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_label"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/edt_inviteCode"
                                android:layout_width="126dip"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dkgray"
                                android:textSize="13dip" />

                            <Button
                                android:id="@+id/btn_action"
                                android:layout_width="71dip"
                                android:layout_height="32dip"
                                android:layout_marginLeft="20dip"
                                android:background="@drawable/login_btn_bg"
                                android:gravity="center"
                                android:text="@string/save"
                                android:textColor="@android:color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="30dip" >

                    <TextView
                        android:id="@+id/invite_10_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/invite_tip_word"
                        android:textColor="#206b8c"
                        android:textSize="17dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/label_invite_10"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/gradient_colorslide_friend"
                            android:gravity="center"
                            android:padding="5dip"
                            android:text="@string/invite_tip_word"
                            android:textColor="#206b8c"
                            android:textSize="17dip" />

                        <Button
                            android:id="@+id/toinvite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_invite_10"
                            android:paddingTop="7dip"
                        android:paddingBottom="7dip"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                             android:layout_marginLeft="42dip"
                            android:layout_marginRight="42dip"
                            android:layout_marginTop="15dip"
                            android:background="@drawable/login_btn_bg"
                            android:gravity="center"
                            android:text="@string/invite_collegues"
                            android:textColor="@android:color/white"
                            android:textSize="17dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="-2dip"
                android:layout_marginTop="-2dip" >
            </ImageView>

            <ImageView
                android:id="@+id/versionImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="-2dip"
                android:layout_marginTop="-2dip" >
            </ImageView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>