<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/mai"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
	<TextView 
	    android:id="@+id/txt_survey_action"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
	    android:layout_marginTop="20dip"
    	android:textSize="25sp"
    	android:textColor="@color/black"
    	android:text="@string/survey_recheck_error"
	    />
	<Button 
	    android:layout_marginTop="40dip"
	    android:id="@+id/btn_recheck_error"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/recheck_error_btn"
	    />
	<Button 
	    android:layout_marginTop="30dip"
	    android:id="@+id/btn_share_survey"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/share_survey"
	    />
</LinearLayout>